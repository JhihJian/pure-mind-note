{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "enables the default permissions",
  "windows": [
    "main"
  ],
  "permissions": [
    "core:default",
    {
      "identifier": "fs:scope",
      "allow": [{ "path": "/**" }]
    },
    "fs:allow-app-read-recursive",
    "fs:allow-app-write-recursive",
    "fs:allow-app-meta-recursive",
    "fs:allow-exists"
  ]
}
